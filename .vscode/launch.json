  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Market API",
      "type": "python",
      "command": "python3",
      "request": "launch",
      "module": "flask",
      "env": {
        "FLASK_APP": "app.py",
        "FLASK_ENV": "development",
        "FLASK_RUN_HOST": "127.0.0.1",
        "FLASK_RUN_PORT": "8084"
      },
      "args": ["run", "--no-debugger"],
      "cwd": "${workspaceFolder}",
      "jinja": true
    }
  ]
}
